@page
@model SupermarketWEB.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products Index";
}

<h1>Products</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Products[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Stock)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Category.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@string.Format("{0:C}", item.Price)</td> <!-- Formato de precio como moneda -->
                <td>@item.Stock</td>
                <td>@item.Category?.Name ?? "Sin categoría"</td> <!-- Muestra "Sin categoría" si no tiene categoria -->
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>