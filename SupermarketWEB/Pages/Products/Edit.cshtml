@page "{id:int}"
@model SupermarketWEB.Pages.Products.EditModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h2>Editar Producto</h2>

<form method="post">
    <input type="hidden" asp-for="ProductForm.Id" /> <!-- Campo oculto para el Id -->

    <div class="form-group">
        <label asp-for="ProductForm.Name" class="control-label"></label>
        <input asp-for="ProductForm.Name" class="form-control" />
        <span asp-validation-for="ProductForm.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductForm.Price" class="control-label"></label>
        <input asp-for="ProductForm.Price" class="form-control" step="1" />
        <span asp-validation-for="ProductForm.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductForm.Stock" class="control-label"></label>
        <input asp-for="ProductForm.Stock" class="form-control" />
        <span asp-validation-for="ProductForm.Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductForm.CategoryId" class="control-label">Categoría</label>
        <select asp-for="ProductForm.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="ProductForm.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
