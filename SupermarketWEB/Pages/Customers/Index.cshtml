@page
@model SupermarketWEB.Pages.Customers.IndexModel
@{
	ViewData["Title"] = "Index Providers";
}
<h1>Index Providers</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Customers[0].DocumentNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].Address)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].Birthday)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Customers[0].Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DocumentNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    @if (item.Birthday.HasValue)
                    {
                        @item.Birthday.Value.ToString("dd/MM/yyyy") <!-- Formato de fecha sin hora -->
                    }
                    else
                    {
                        @:Sin información <!--Valor a mostrar cuando no haya fecha -->
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>